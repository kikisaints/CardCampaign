<Page
    x:Class="Card_Campaign.Controls.MonsterDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Card_Campaign.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5,0" x:Name="infoHeader" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock x:Name="header" Text="HEADER TITLE" Style="{ThemeResource CaptionTextBlockStyle}" TextAlignment="Center" Foreground="{ThemeResource UserSelectedCardBrush}"/>
        </Grid>
        <Grid Grid.Row="1" Margin="10,0" x:Name="infoDetail" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock x:Name="content" Text="Lorem ipsum" Style="{ThemeResource CaptionTextBlockStyle}" TextAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Page>
